<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp">
        <item name="android:colorPrimary">@color/gold</item>
        <item name="android:statusBarColor">@color/gold_variant</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">
            @color/gold
        </item>
        <item name="itemIconTint">
            @color/icon_color_selector_on_light_mode
        </item>
        <item name="itemTextColor">
            @color/icon_color_selector_on_light_mode
        </item>
        <item name="itemIconSize">
            30dp
        </item>
    </style>

    <style name="IslamiBackground">
        <item name="android:background">
            @drawable/background_light
        </item>
    </style>

    <style name="SplashBackground">
        <item name="android:background">
            @drawable/splash_background_light
        </item>
    </style>

    <style name="LogoQuran">
        <item name="android:src">
            @drawable/logo_quran_light
        </item>
    </style>

    <style name="LogoRoute">
        <item name="android:src">
            @drawable/logo_route_light
        </item>
    </style>

    <style name="IslamiText">
        <item name="android:textSize">
            23sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/black
        </item>
    </style>

    <style name="LInesColor">
        <item name="android:background">
            @color/gold
        </item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">
            @color/black
        </item>
    </style>

    <style name="IconColor">
        <item name="android:tint">
            @color/black
        </item>
    </style>

    <style name="ChaptersContentBackground">
        <item name="android:background">
            @drawable/content_background_on_light_mode
        </item>
    </style>

    <style name="LogoHeadOfSebha">
        <item name="android:src">
            @drawable/logo_head_of_sebha_light
        </item>
    </style>

    <style name="LogoBodyOfSebha">
        <item name="android:src">
            @drawable/logo_body_of_sebha_light
        </item>

    </style>

    <style name="NumberOfTasbehBackgroundAndColor">
        <item name="android:background">
            @drawable/number_of_tasbeh_background_light_mode
        </item>
        <item name="android:textSize">
            23sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>
</resources>