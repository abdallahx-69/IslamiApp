<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp">
        <item name="android:colorPrimary">@color/blue_dark</item>
        <item name="android:statusBarColor">@color/brown</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">
            @color/blue_dark
        </item>
        <item name="itemIconTint">
            @color/icon_color_selector_on_dark_mode
        </item>
        <item name="itemTextColor">
            @color/icon_color_selector_on_dark_mode
        </item>
        <item name="itemIconSize">
            30dp
        </item>
    </style>

    <style name="IslamiBackground">
        <item name="android:background">
            @drawable/dark_background
        </item>
    </style>

    <style name="SplashBackground">
        <item name="android:background">
            @drawable/splash_background_dark
        </item>
    </style>

    <style name="LogoQuran">
        <item name="android:src">
            @drawable/logo_quran_dark
        </item>
    </style>

    <style name="LogoRoute">
        <item name="android:src">
            @drawable/logo_route_dark
        </item>
    </style>

    <style name="IslamiText">
        <item name="android:textSize">
            25sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="LInesColor">
        <item name="android:background">
            @color/orange
        </item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="IconColor">
        <item name="android:tint">
            @color/white
        </item>
    </style>

    <style name="ChaptersContentBackground">
        <item name="android:background">
            @drawable/chapters_content_background_on_dark_mode
        </item>
    </style>
</resources>